{
  "expo": {
    "name": "Mi Ciudad Verde",
    "slug": "mi-ciudad-verde",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/descarga.png",
    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splash_clean.png",
      "resizeMode": "cover",
      "backgroundColor": "#2E7D32"
    },

    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.miciudadverde.app"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/descarga.png",
        "backgroundColor": "#2E7D32"
      },
      "package": "com.miciudadverde.app"
    },

    "web": {
      "favicon": "./assets/descarga.png"
    }
  }
}
